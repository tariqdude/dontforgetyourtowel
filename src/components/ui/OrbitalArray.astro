---
const ariaLabel = 'Decorative orbital array animation';
const dustParticles = Array.from({ length: 16 });
---

<div class="orbital-stage" role="img" aria-label={ariaLabel}>
  <div class="orbital-lattice" aria-hidden="true"></div>
  <div class="orbital-grid" aria-hidden="true"></div>
  <div class="orbital-halo"></div>
  <div class="orbital-pulse pulse-a" aria-hidden="true"></div>
  <div class="orbital-pulse pulse-b" aria-hidden="true"></div>
  <div class="orbital-core"></div>
  <div class="orbit orbit-1">
    <span class="orbital-dot"></span>
    <span class="orbital-satellite satellite-1"></span>
  </div>
  <div class="orbit orbit-2">
    <span class="orbital-dot"></span>
    <span class="orbital-satellite satellite-2"></span>
  </div>
  <div class="orbit orbit-3">
    <span class="orbital-dot"></span>
    <span class="orbital-satellite satellite-3"></span>
  </div>
  <div class="orbit orbit-4">
    <span class="orbital-dot"></span>
    <span class="orbital-satellite satellite-4"></span>
  </div>
  <div class="orbit orbit-5">
    <span class="orbital-dot"></span>
    <span class="orbital-satellite satellite-5"></span>
  </div>
  <div class="signal-arc arc-a" aria-hidden="true"></div>
  <div class="signal-arc arc-b" aria-hidden="true"></div>
  <div class="orbital-dust" aria-hidden="true">
    {dustParticles.map(() => <span class="dust" />)}
  </div>
</div>

<style>
  .orbital-stage {
    position: relative;
    min-height: clamp(320px, 46vw, 520px);
    border-radius: 24px;
    overflow: hidden;
    background: radial-gradient(
      circle at 50% 20%,
      rgba(30, 41, 59, 0.8),
      #05060a 60%
    );
    display: grid;
    place-items: center;
    perspective: 1200px;
    isolation: isolate;
  }

  .orbital-lattice {
    position: absolute;
    inset: 6% 8%;
    border-radius: 50%;
    border: 1px solid rgba(255, 255, 255, 0.08);
    background: radial-gradient(
      circle at center,
      rgba(56, 189, 248, 0.08),
      transparent 60%
    );
    transform: translateZ(-140px);
    animation: latticeSpin 26s linear infinite;
  }

  .orbital-grid {
    position: absolute;
    inset: 10% 12%;
    background-image: radial-gradient(
      rgba(255, 255, 255, 0.08) 1px,
      transparent 1px
    );
    background-size: 24px 24px;
    opacity: 0.25;
    transform: translateZ(-100px);
    animation: gridSpin 18s linear infinite;
  }

  .orbital-pulse {
    position: absolute;
    width: 70%;
    aspect-ratio: 1;
    border-radius: 50%;
    border: 1px solid rgba(56, 189, 248, 0.2);
    box-shadow: 0 0 40px rgba(56, 189, 248, 0.25);
    animation: pulseWave 7s ease-in-out infinite;
  }

  .orbital-pulse.pulse-b {
    width: 90%;
    border-color: rgba(236, 72, 153, 0.18);
    box-shadow: 0 0 60px rgba(236, 72, 153, 0.25);
    animation-delay: 1.6s;
  }

  @keyframes gridSpin {
    to {
      transform: translateZ(-100px) rotate(360deg);
    }
  }

  .orbital-halo {
    position: absolute;
    width: 140%;
    aspect-ratio: 1;
    background: conic-gradient(
      from 0deg,
      rgba(59, 130, 246, 0.25),
      rgba(236, 72, 153, 0.2),
      rgba(16, 185, 129, 0.2),
      rgba(59, 130, 246, 0.25)
    );
    filter: blur(60px);
    opacity: 0.7;
    animation: halo-spin 24s linear infinite;
  }

  .orbital-core {
    position: absolute;
    width: clamp(90px, 14vw, 140px);
    aspect-ratio: 1;
    border-radius: 999px;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.8),
      rgba(99, 102, 241, 0.4) 55%,
      transparent 70%
    );
    box-shadow: 0 0 60px rgba(99, 102, 241, 0.4);
    animation: core-pulse 7s ease-in-out infinite;
  }

  .orbit {
    position: absolute;
    width: 55%;
    aspect-ratio: 1;
    border-radius: 999px;
    border: 1px solid rgba(255, 255, 255, 0.14);
    transform-style: preserve-3d;
    animation: orbit-spin 16s linear infinite;
  }

  .orbit-2 {
    width: 70%;
    transform: rotateX(70deg) rotateZ(20deg);
    animation-duration: 22s;
  }

  .orbit-3 {
    width: 82%;
    transform: rotateY(70deg) rotateZ(-18deg);
    animation-duration: 26s;
  }

  .orbit-4 {
    width: 95%;
    transform: rotateX(50deg) rotateY(20deg);
    animation-duration: 30s;
  }

  .orbit-5 {
    width: 110%;
    transform: rotateX(30deg) rotateY(-40deg);
    animation-duration: 34s;
  }

  .orbital-dot {
    position: absolute;
    top: -6px;
    left: 50%;
    width: 12px;
    height: 12px;
    border-radius: 999px;
    transform: translateX(-50%);
    background: radial-gradient(circle, #fff, rgba(56, 189, 248, 0.6));
    box-shadow: 0 0 16px rgba(56, 189, 248, 0.8);
  }

  .orbital-satellite {
    position: absolute;
    width: 10px;
    height: 10px;
    border-radius: 999px;
    background: radial-gradient(
      circle,
      rgba(255, 255, 255, 0.9),
      rgba(99, 102, 241, 0.5)
    );
    box-shadow: 0 0 14px rgba(99, 102, 241, 0.7);
  }

  .satellite-1 {
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
  }

  .satellite-2 {
    left: -6px;
    top: 50%;
    transform: translateY(-50%);
  }

  .satellite-3 {
    top: -6px;
    left: 50%;
    transform: translateX(-50%);
  }

  .satellite-4 {
    right: -6px;
    top: 50%;
    transform: translateY(-50%);
  }

  .satellite-5 {
    left: 20%;
    top: -6px;
    transform: translateX(-50%);
  }

  .signal-arc {
    position: absolute;
    inset: 8% 14%;
    border-radius: 50%;
    border: 1px dashed rgba(56, 189, 248, 0.4);
    opacity: 0.5;
    animation: arcDrift 10s ease-in-out infinite;
  }

  .signal-arc.arc-b {
    inset: 18% 22%;
    border-color: rgba(236, 72, 153, 0.35);
    animation-delay: 2s;
  }

  .orbital-dust {
    position: absolute;
    inset: 12% 14%;
    pointer-events: none;
  }

  .dust {
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.8);
    box-shadow: 0 0 10px rgba(56, 189, 248, 0.6);
    animation: dustDrift 8s ease-in-out infinite;
  }

  .dust:nth-child(1) {
    top: 10%;
    left: 20%;
  }
  .dust:nth-child(2) {
    top: 25%;
    right: 15%;
    animation-delay: 0.6s;
  }
  .dust:nth-child(3) {
    bottom: 20%;
    left: 30%;
    animation-delay: 1.2s;
  }
  .dust:nth-child(4) {
    bottom: 15%;
    right: 25%;
    animation-delay: 1.8s;
  }
  .dust:nth-child(5) {
    top: 40%;
    left: 45%;
    animation-delay: 2.4s;
  }
  .dust:nth-child(6) {
    top: 12%;
    left: 55%;
    animation-delay: 3s;
  }
  .dust:nth-child(7) {
    bottom: 35%;
    left: 12%;
    animation-delay: 3.6s;
  }
  .dust:nth-child(8) {
    bottom: 40%;
    right: 10%;
    animation-delay: 4.2s;
  }
  .dust:nth-child(9) {
    top: 55%;
    left: 70%;
    animation-delay: 4.8s;
  }
  .dust:nth-child(10) {
    top: 65%;
    right: 35%;
    animation-delay: 5.4s;
  }
  .dust:nth-child(11) {
    top: 30%;
    left: 8%;
    animation-delay: 6s;
  }
  .dust:nth-child(12) {
    bottom: 8%;
    right: 45%;
    animation-delay: 6.6s;
  }
  .dust:nth-child(13) {
    top: 18%;
    right: 50%;
    animation-delay: 7.2s;
  }
  .dust:nth-child(14) {
    bottom: 28%;
    left: 55%;
    animation-delay: 7.8s;
  }
  .dust:nth-child(15) {
    top: 48%;
    right: 60%;
    animation-delay: 8.4s;
  }
  .dust:nth-child(16) {
    bottom: 50%;
    left: 65%;
    animation-delay: 9s;
  }

  @keyframes arcDrift {
    0%,
    100% {
      opacity: 0.35;
      transform: scale(0.98);
    }
    50% {
      opacity: 0.7;
      transform: scale(1.03);
    }
  }

  @keyframes pulseWave {
    0%,
    100% {
      transform: scale(0.95);
      opacity: 0.35;
    }
    50% {
      transform: scale(1.05);
      opacity: 0.7;
    }
  }

  @keyframes latticeSpin {
    to {
      transform: translateZ(-140px) rotate(360deg);
    }
  }

  @keyframes dustDrift {
    0%,
    100% {
      transform: translateY(0);
      opacity: 0.4;
    }
    50% {
      transform: translateY(-16px);
      opacity: 0.9;
    }
  }

  @keyframes orbit-spin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes halo-spin {
    to {
      transform: rotate(360deg);
    }
  }

  @keyframes core-pulse {
    0%,
    100% {
      transform: scale(0.95);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.05);
      opacity: 1;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .orbital-halo,
    .orbital-core,
    .orbit,
    .signal-arc,
    .orbital-grid,
    .orbital-lattice,
    .orbital-pulse,
    .orbital-dust {
      animation: none !important;
    }
  }

  :global(html[data-demo-reduced-motion='true']) .orbital-stage * {
    animation: none !important;
    transition: none !important;
  }

  :global(html[data-demo-perf='true']) .orbital-stage .orbital-halo {
    opacity: 0.2;
    filter: blur(20px);
  }

  :global(html[data-demo-perf='true']) .orbital-stage .orbit {
    animation-duration: 40s;
  }

  :global(html[data-demo-perf='true']) .orbital-stage .orbital-dust {
    display: none;
  }
</style>
