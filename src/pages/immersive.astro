---
import MarketingLayout from '../layouts/MarketingLayout.astro';
import ImmersiveHome from '../components/immersive/ImmersiveHome.astro';
import HeroExplorerLazy from '../components/react/HeroExplorerLazy.tsx';

const title = 'Immersive 3D Lab';
const description =
  'R3F portal hero + the original immersive CSS layers and scroll story in one dedicated space.';
---

<MarketingLayout
  title={title}
  description={description}
  bodyClass="bg-zinc-950"
  mainClass="p-0"
  showFooter={false}
  showStickyCTA={false}
  showHeader={false}
  showMobileNav={false}
  showLiveChat={false}
>
  <section class="relative min-h-screen bg-zinc-950">
    <HeroExplorerLazy client:visible />
  </section>

  <ImmersiveHome />
</MarketingLayout>
